@model RentalSys.Models.AdminModel
@{
    ViewData["Title"] = "AdminLogin";
    Layout = "~/Views/Shared/_AdminLoginLayout.cshtml";
}

<div class="main-panel" style="margin-top:97px ;width:100%">
    <div class="content-wrapper" style="width:100% ">
        <div class="row" >
            <div class="col-md-3">

            </div>
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Admin Login</h4>
                        <p class="card-description">
                            Log in to access the admin dashboard...
                            <h6 style="color:red">@ViewBag.m</h6>
                        </p>
                        <form class="forms-sample" asp-controller="Admin" asp-action="AdminLogin" method="post">
                            <div class="form-group">
                                <label asp-for="AdName">Admin Name</label>
                                <input asp-for="AdName" type="text" class="form-control" id="exampleInputUsername1" placeholder="Username">
                                <span asp-validation-for="AdName" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group">
                                <label asp-for="Password">Password</label>
                                <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <div asp-validation-summary="All"></div>
                            </div>

                            
                            
                            <button type="submit" class="btn btn-primary me-2">Login</button>
                            <div class="text-center mt-4 fw-light">

                                Want to Login as User? <a href="@Url.Action("UserLogin","User")" class="text-primary">User Login</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-3">

            </div>
            
        </div>
     </div>
</div>