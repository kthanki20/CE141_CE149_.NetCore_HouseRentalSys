@model IEnumerable<RentalSys.Models.HouseDetailModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">All House Details</h4>
                        <p class="card-description">

                        </p>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>

                                        <th>@Html.DisplayNameFor(model => model.HouseName)</th>
                                        <th>@Html.DisplayNameFor(model => model.HouseType)</th>
                                        <th>@Html.DisplayNameFor(model => model.HouseRentAmount)</th>
                                        <th>@Html.DisplayNameFor(model => model.HouseAddress)</th>
                                        
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.HouseName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.HouseType)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.HouseRentAmount)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.HouseAddress)
                                            </td>
                                        
                                            <td>
                                                <form asp-action="BookingHouse" asp-controller="HouseBooking" method="get">
                                                    <input type="hidden" value="@item.HouseID" name="id" />
                                                    <input type="submit" value="Book" class="btn btn-primary" />
                                                    @*<a asp-action="Index">Back to List</a>*@
                                                </form>

                                            </td>
                                        </tr>

                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

