@model RentalSys.Models.HouseDetailModel

@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}



<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Book House</h4>
                        <p class="card-description">

                        </p>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.HouseName)</th>
                                        <th>@Html.DisplayNameFor(model => model.HouseType)</th>
                                        <th>@Html.DisplayNameFor(model => model.HouseRentAmount)</th>
                                        <th>@Html.DisplayNameFor(model => model.HouseAddress)</th>


                                    </tr>
                                </thead>
                                <tbody>
                                    @*@foreach (var item in @ViewBag.ss)*@

                                    <tr>
                                        <td>
                                            @ViewBag.ss.HouseName
                                        </td>
                                        <td>
                                            @ViewBag.ss.HouseType
                                        </td>
                                        <td>
                                            @ViewBag.ss.HouseRentAmount
                                        </td>
                                        <td>
                                            @ViewBag.ss.HouseAddress
                                        </td>
                                       
                                    </tr>

                                    <tr>
                                    </tr>

                                </tbody>


                            </table>
                            <div style="margin:20px">
                            </div>
                            <form asp-action="BookingHouse" asp-controller="HouseBooking">
                                <input type="hidden" value="@ViewBag.ss.HouseID" name="id" />

                                @*<input type="hidden" asp-for="ResID" value="" name="fid" />*@
                                <input type="submit" value="Book House" class="btn btn-primary" />

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>