@model RentalSys.Models.HouseDetailModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-lg-10 grid-margin stretch-card" style="margin:37px">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Delete Flight Information</h4>
                        <p class="card-description">
                            Are you sure you want to delete this?
                        </p>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>

                                        <th>@Html.DisplayNameFor(model => model.HouseName)</th>
                                        <th>@Html.DisplayNameFor(model => model.HouseType)</th>
                                        <th>@Html.DisplayNameFor(model => model.HouseRentAmount)</th>
                                        <th>@Html.DisplayNameFor(model => model.HouseAddress)</th>
                                     

                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(model => model.HouseName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.HouseType)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.HouseRentAmount)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.HouseAddress)
                                        </td>
                                       
                                    </tr>
                                    <tr>
                                    </tr>

                                </tbody>


                            </table>
                            <div style="margin:20px">
                            </div>
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="HouseID" />
                                <input type="submit" value="Delete" class="btn btn-danger" />
                              
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
 