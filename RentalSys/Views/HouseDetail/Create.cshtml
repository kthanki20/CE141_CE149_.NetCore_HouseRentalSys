@model RentalSys.Models.HouseDetailModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Add House Information</h4>
                        <p class="card-description">
                            Add House Details...
                            <h6 style="color:green">@ViewBag.m</h6>
                        </p>
                        <form class="forms-sample" asp-controller="HouseDetail" asp-action="Create" method="post">

                            <div class="form-group">
                            <label asp-for="HouseName">House Name</label>
                                <input asp-for="HouseName" class="form-control" id="housename" placeholder="House Name">
                            <span asp-validation-for="HouseName" class="text-danger"></span>
                            </div>

                            

                            <div class="form-group">
                                <label asp-for="HouseType">House Type</label>
                                <input asp-for="HouseType" class="form-control" id="housetype" placeholder="House Type">
                                <span asp-validation-for="HouseType" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="HouseRentAmount">House Rent Amount</label>
                                <input asp-for="HouseRentAmount" class="form-control" id="houseamt" placeholder="House Amount">
                                <span asp-validation-for="HouseRentAmount" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="HouseAddress">House Address</label>
                                <input asp-for="HouseAddress" class="form-control" id="housadd" placeholder="House Address">
                                <span asp-validation-for="HouseAddress" class="text-danger"></span>
                            </div>

                            @* <div class="form-group">
                                <div asp-validation-summary="All"></div>
                            </div> *@
                            <button type="submit" class="btn btn-primary me-2">Add</button>

                        </form>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>